<section class="sign-in-page min-h-screen flex flex-col items-center justify-center bg-gray-100">
    <div class="form-title text-center mb-4">
        <h1 class="text-3xl font-bold">Sign Up</h1>
    </div>
    <div class="form-section bg-white p-8 rounded shadow-md w-96">
        <form class="signup-form">
            <div class="mb-4">
                <label for="username-signup" class="block text-sm font-medium text-gray-600">Enter a Username</label>
                <input type="text" class="entry-field w-full mt-1 p-2 border rounded" id="username-signup" />
            </div>
            <div class="mb-4">
                <label for="password-signup" class="block text-sm font-medium text-gray-600">Enter a Password</label>
                <input type="password" class="entry-field w-full mt-1 p-2 border rounded" id="password-signup" />
            </div>
            <div>
                <button type="submit" class="login-signup-btn w-full bg-blue-500 text-white py-2 px-4 rounded">Sign Up</button>
            </div>
        </form>
    </div>

    <p class="text-center mt-4">
        <a href="/login" class="login-link text-blue-500">Log in </a>
    </p>
</section>

<script src="/js/signup.js"></script>
