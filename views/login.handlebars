<section class="login-page min-h-screen flex flex-col items-center justify-center bg-gray-100">
    <div class="form-title text-center mb-4">
        <h1 class="text-3xl font-bold">Log In</h1>
    </div>
    <div class="form-section bg-white p-8 rounded shadow-md w-96">
        <form class="login-form">
            <div class="mb-4">
                <label for="username-login" class="block text-sm font-medium text-gray-600">Username</label>
                <input type="text" class="entry-field w-full mt-1 p-2 border rounded" id="username-login" />
            </div>
            <div class="mb-4">
                <label for="password-login" class="block text-sm font-medium text-gray-600">Password</label>
                <input type="password" class="entry-field w-full mt-1 p-2 border rounded" id="password-login" />
            </div>
            <div>
                <button type="submit" class="login-signup-btn w-full bg-blue-500 text-white py-2 px-4 rounded">Log In</button>
            </div>
        </form>
    </div>

    <p class="text-center mt-4">
        <a href="/signup" class="sign-in-link text-blue-500">Sign Up </a>
    </p>
</section>

<script src="/js/login.js"></script>

